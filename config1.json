{
	"data": {
		"filename": "data.csv",
		"time":"daily",
		"columns": [
			"close"
		],
		"seq_len": 50,
		"train_test_split": 0.8,
		"preprocess": "standardise",
		"prediction_type": "multi_sequences"
	},
	"training": {
    	"mode": "in",
		"epochs": 1,
		"batch": 32
	},
	"model": {
    	"select" : "yes",
		"loss": "mse",
		"optimizer": "adam",
		"save_dir": "saved_models",
		"layers": [
			{
				"type": "lstm",
				"neurons": 100,
				"input_timesteps": 49,
				"input_dim": 1,
				"return_seq": true
			},
			{
				"type": "dropout",
				"dropout": 0.2
			},
			{
				"type": "lstm",
				"neurons": 100,
				"return_seq": true
			},
			{
				"type": "lstm",
				"neurons": 100,
				"return_seq": false
			},
			{
				"type": "dropout",
				"rate": 0.2
			},
			{
				"type": "dense",
				"neurons": 1,
				"activation": "linear"
			}
		]
	}
}
